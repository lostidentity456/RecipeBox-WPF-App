<UserControl x:Class="RecipeBox.App.Views.RecipeListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:converters="clr-namespace:RecipeBox.App.Converters"
             xmlns:local="clr-namespace:RecipeBox.App.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <!-- Three rows for Header, List, and Buttons -->
        <Grid.RowDefinitions>
            <!-- Row 0 for Header -->
            <RowDefinition Height="Auto"/>
            <!-- Row 1 for ListView -->
            <RowDefinition Height="*"/>
            <!-- Row 2 for Buttons -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="5">

            <!-- Section 1: Welcome message and Logout button on the same line -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding WelcomeMessage}" FontSize="20" FontWeight="Bold" Grid.Column="0"/>
                <Button Content="Manage Users" Command="{Binding AdminPanelCommand}"
                            Visibility="{Binding IsAdmin, Converter={StaticResource BooleanToVisibilityConverter}}"
                            HorizontalAlignment="Right" Margin="0,0,5,0"/>
                <Button Content="Logout" Grid.Column="1" VerticalAlignment="Center"
                Command="{Binding DataContext.LogoutCommand, 
                                  RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
            </Grid>

            <StackPanel Orientation="Horizontal" Margin="0,15,0,15">
                <TextBlock Text="Search:" FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBox Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}" 
                         Width="300" Margin="5,0,0,0"/>
            </StackPanel>
        </StackPanel>

        <ListView Grid.Row="1" ItemsSource="{Binding Recipes}" 
          SelectedItem="{Binding SelectedRecipe}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <i:InvokeCommandAction Command="{Binding EditRecipeCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Title" Width="300" 
                    DisplayMemberBinding="{Binding Title}"/>
                    <GridViewColumn Header="Public" Width="100" 
                    DisplayMemberBinding="{Binding IsPublic}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="5,10,0,0">
            <Button Content="New Recipe" Command="{Binding CreateNewRecipeCommand}" 
                    Width="120"/>
            <Button Content="Delete Selected" Command="{Binding DeleteRecipeCommand}" 
                    Width="120" Margin="5,0,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
