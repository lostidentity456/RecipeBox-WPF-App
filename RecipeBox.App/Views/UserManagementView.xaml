<UserControl x:Class="RecipeBox.App.Views.UserManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RecipeBox.App.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- User List -->
            <ColumnDefinition Width="*"/>
            <!-- Details Panel -->
        </Grid.ColumnDefinitions>

        <!-- User List Panel -->
        <DockPanel Grid.Column="0">
            <TextBlock Text="Users" FontSize="18" FontWeight="Bold" DockPanel.Dock="Top" Margin="5"/>
            <ListView ItemsSource="{Binding Users}" SelectedItem="{Binding SelectedUser}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Username}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </DockPanel>

        <!-- Details Panel (This binding will now work correctly) -->
        <StackPanel Grid.Column="1" Margin="20,0,0,0"
                    Visibility="{Binding SelectedUser, Converter={StaticResource NullToVisibilityConverter}}">
            <TextBlock Text="Edit User" FontSize="18" FontWeight="Bold" Margin="5"/>
            <TextBlock Text="{Binding SelectedUser.Username, StringFormat='Editing: {0}'}" FontSize="16" Margin="5"/>

            <TextBlock Text="Role:" Margin="5,15,5,5"/>
            <ComboBox ItemsSource="{Binding AllRoles}" 
                      SelectedItem="{Binding SelectedUserRole, Mode=TwoWay}"
                      Width="200" HorizontalAlignment="Left" Margin="5,0,0,0"/>

            <Button Content="Save Changes" Command="{Binding SaveChangesCommand}" Width="150" Margin="5,20,0,0"/>
            <Button Content="Back to Recipe List" Command="{Binding GoBackCommand}" Width="150" Margin="5,10,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
