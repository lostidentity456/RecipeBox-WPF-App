<Window x:Class="RecipeBox.App.Views.ChangeRoleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeBox.App.Views"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight" 
        WindowStartupLocation="CenterOwner" Height="300" Width="300">
    <StackPanel Margin="15">
        <!-- Display the username so the admin knows who they are editing -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Change role for: " FontWeight="Bold"/>
            <TextBlock Text="{Binding Username}"/>
        </StackPanel>

        <TextBlock Text="New Role:"/>
        <!-- We reuse the same ObjectDataProvider from App.xaml -->
        <ComboBox ItemsSource="{Binding Source={StaticResource UserRolesEnum}}" 
                  SelectedValue="{Binding SelectedRole}" Margin="0,5"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="OK" IsDefault="True" Click="OkButton_Click" MinWidth="80"/>
            <Button Content="Cancel" IsCancel="True" MinWidth="80" Margin="5,0,0,0"/>
        </StackPanel>
    </StackPanel>
</Window>
