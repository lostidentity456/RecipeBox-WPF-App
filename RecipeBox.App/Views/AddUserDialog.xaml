<Window x:Class="RecipeBox.App.Views.AddUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeBox.App.Views"
        mc:Ignorable="d"
        Title="Add New User" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner" Height="450" Width="450">
    <StackPanel Margin="15">
        <TextBlock Text="Username:"/>
        <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>
        <TextBlock Text="Password:"/>
        <PasswordBox x:Name="UserPasswordBox" Margin="0,5"/>
        <TextBlock Text="Role:"/>
        <!-- Bind to the resource we created in App.xaml -->
        <ComboBox ItemsSource="{Binding Source={StaticResource UserRolesEnum}}" 
                  SelectedValue="{Binding SelectedRole}" Margin="0,5"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="OK" IsDefault="True" Click="OkButton_Click" MinWidth="80"/>
            <Button Content="Cancel" IsCancel="True" MinWidth="80" Margin="5,0,0,0"/>
        </StackPanel>
    </StackPanel>
</Window>
